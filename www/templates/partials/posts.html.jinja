<div class="posts">
    <ul>
        {% for post in self.posts %}
            <li>
                <a href="/blog/post/{{ post.name }}">{{ post.meta.title }}</a>
                <div class="dots"></div>
                {% let published = post.meta.published.format("%Y-%m-%d") %}
                <time datetime="{{ published }}">
                    {{ post.meta.published.format("%b %d, %Y") }}
                </time>
            </li>
        {% endfor %}
    </ul>

    {% if self.has_see_all_posts %}
        <p class="text"><a href="/blog">See all posts</a></p>
    {% endif %}
</div>
